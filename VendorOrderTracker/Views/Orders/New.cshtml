@{
  Layout = "_Layout";
}

<section class="card">
  <div class="card-header">
    Create New Order
  </div>
  <div class="card-body">
    <h5 class="card-title">Enter your order information</h5>
    <div class="card-text">
      <form action="/orders" method="post">
        <div class="form-group">
          <label for="orderTitle">Order title</label>
          <input type="text" id="orderTitle" name="orderTitle" class="form-control" placeholder="Enter order title">
        </div>
        <div class="form-group">
          <label for="orderDescription">Order description</label>
          <input type="text" id="orderDescription" name="orderDescription" class="form-control" placeholder="Enter order description">
        </div>
        <div class="form-group">
          <label for="orderDescription">Order description</label>
          <input type="text" id="orderDescription" name="orderDescription" class="form-control" placeholder="Enter order description">
        </div>
        <div class="form-group">
          <label for="orderPrice">Order price</label>
          <input type="number" id="orderPrice" name="orderPrice" class="form-control" placeholder="Enter order price">
        </div>
        <div class="form-group">
          <label for="orderDate">Order date</label>
          <input type="date" id="orderDate" name="orderDate" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</section>